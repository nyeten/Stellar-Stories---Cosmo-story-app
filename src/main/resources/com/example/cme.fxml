<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="1"
      prefWidth="640" prefHeight="480">
<StackPane fx:id="root" prefWidth="640" prefHeight="480">

    <!-- Background slides -->
    <ImageView fx:id="slides" fitWidth="480" fitHeight="360" preserveRatio="true"/>

    <!-- Foreground image -->
    <ImageView fx:id="foreground" fitWidth="640" fitHeight="480" preserveRatio="true" />

    <!-- BorderPane for Text and Buttons -->
    <BorderPane prefWidth="640" prefHeight="440">
        <!-- top of border Pane contains exit button -->
        <top>
                <Button fx:id="backToMenuButton" text="Back to Menu" onAction="#backToMenu" prefWidth="100"/>
        </top>
        <!-- Bottom center of BorderPane contains texts and buttons for slide traversal -->
        <bottom>
            <VBox
              alignment="BOTTOM_CENTER"
              spacing="1"
              StackPane.alignment="BOTTOM_CENTER" >
                <Text fx:id="caption"
                text="CME"
                style="-fx-font-size: 20px; -fx-fill: black; -fx-stroke: black; -fx-stroke-width: 1;" />

                <Text fx:id="textBox"
                style="-fx-font-size: 12px; -fx-fill: black;" />

                <HBox spacing="10" alignment="BOTTOM_LEFT">
                    <Button fx:id="prevSlide" text="Previous" onAction="#prev" prefWidth="100"/>
                    <Button fx:id="nextSlide" text="Next" onAction="#next" prefWidth="100"/>
                </HBox>
            </VBox>
        </bottom>
    </BorderPane>
</StackPane>
</VBox>