<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="1"
      prefWidth="640" prefHeight="480">
<StackPane fx:id="root" prefWidth="640" prefHeight="480">

    <!-- Background slides -->
    <ImageView fx:id="slides" fitWidth="600" fitHeight="300" preserveRatio="true"/>

    <!-- Foreground image -->
    <ImageView fx:id="foreground" fitWidth="640" fitHeight="480" preserveRatio="true" translateY="+60" />

    <!-- BorderPane for Text and Buttons -->
    <BorderPane prefWidth="640" prefHeight="440">
        <!-- top of border Pane contains exit button -->
        <top>
                <Button fx:id="backToMenuButton" text="Exit" onAction="#backToMenu" prefWidth="100"/>
        </top>
        <!-- Bottom center of BorderPane contains texts and buttons for slide traversal -->
        <bottom>
            <VBox
              alignment="BOTTOM_CENTER"
              spacing="1"
              StackPane.alignment="BOTTOM_CENTER">

                <Text fx:id="textBox"
                style="-fx-font-size: 15px; -fx-fill: black;" />

                <HBox spacing="10" alignment="BOTTOM_LEFT">
                    <Button fx:id="prevSlide" text="Previous" onAction="#prev" prefWidth="100"/>
                    <Button fx:id="nextSlide" text="Next" onAction="#next" prefWidth="100"/>
                </HBox>
            </VBox>
        </bottom>
    </BorderPane>
</StackPane>
</VBox>