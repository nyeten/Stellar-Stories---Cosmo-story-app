<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      prefWidth="640" prefHeight="480">

    <!-- BorderPane lets us place UI in top/bottom regions cleanly -->
    <BorderPane prefWidth="640" prefHeight="440">

        <!-- Background / Slides in center -->
        <center>
            <StackPane>
                <ImageView fx:id="solarSlides" fitWidth="600" fitHeight="360" preserveRatio="false" translateY="-60"/>
                <ImageView fx:id="foreground" fitWidth="640" fitHeight="480" preserveRatio="false"/>
            </StackPane>
        </center>

        <!-- Exit button at top-left -->
        <top>
            <Button fx:id="exit" text="Exit" onAction="#exitThing" prefWidth="60"
                    BorderPane.alignment="TOP_LEFT"/>
        </top>


        <!-- Text at bottom-center -->
        <bottom>
            <Text fx:id="caption"
                style="-fx-font-size: 15px; -fx-fill: black; -fx-stroke: black; -fx-stroke-width: 1;"
                translateY="-120"/>
            <Text fx:id="textBox"
                  style="-fx-font-size: 15px; -fx-fill: black; -fx-stroke: black; -fx-stroke-width: 1;"
                  BorderPane.alignment="CENTER" translateY="-120"/>
        </bottom>
    </BorderPane>

    <!-- Styled Slider below the BorderPane -->
    <Slider fx:id="stageSlider"
            min="0" max="100" value="0"
            majorTickUnit="1" blockIncrement="1"
            snapToTicks="true"
            />
</VBox>