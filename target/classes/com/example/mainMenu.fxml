<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="640" prefHeight="480"
      spacing="40"
      alignment="CENTER"
      style="-fx-background-color: LIGHTCORAL;">

    <!-- Top Row -->
    <HBox spacing="40" alignment="CENTER">
        <Button text="Solar Flares" onAction="#switchToTut1" prefWidth="150"/>
        <Button text="CME" onAction="#switchToCME" prefWidth="150"/>
    </HBox>

    <!-- Bottom Row -->
    <HBox spacing="40" alignment="CENTER">
        <Button text="Impact on Earth" onAction="#switchToEarthImpacts" prefWidth="150"/>
        <Button text="Space Weather" onAction="#switchToSpaceWeather" prefWidth="150"/>
    </HBox>

</VBox>